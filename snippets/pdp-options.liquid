<div class='mb-3'>
  <label class='block w-full text-[10px] uppercase font-bold text-gray-500 mb-1' for='Option-{{ option.name }}'>
    {{ option.name }}
  </label>
  <select name='options[{{ option.name |escape }}]' id='Option-{{ option.name }}' class='w-full py-2 px-1 border'>
    {% for value in option.values %}
    <option value='{{ value | escape }}' {% if option.selected_value==value %} selected {% endif %}>
      {{ value }}
    </option>
    {% endfor %}
  </select>
</div>